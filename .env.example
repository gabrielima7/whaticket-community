# WhatICket Environment Configuration
# Copy this file to .env and configure for your environment

# ==================== Application ====================
NODE_ENV=production
TZ=America/Sao_Paulo

# ==================== Database - PostgreSQL ====================
POSTGRES_DB=whaticket
POSTGRES_USER=whaticket
POSTGRES_PASSWORD=whaticket_secret
POSTGRES_PORT=5432

# ==================== Redis ====================
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== JWT Security ====================
# IMPORTANT: Change these values in production!
JWT_SECRET=change-this-super-secret-jwt-key-in-production
JWT_REFRESH_SECRET=change-this-super-secret-refresh-key-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==================== URLs ====================
BACKEND_PORT=3001
BACKEND_URL=http://localhost:3001
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# ==================== Development Tools (optional) ====================
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# ==================== Sentry (optional) ====================
SENTRY_DSN=