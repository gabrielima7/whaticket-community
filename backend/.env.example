# Whaticket Enterprise v2
# Copy this file to .env and configure your environment

# ==================== Application ====================
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# ==================== Database - PostgreSQL ====================
# Connection URL format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://whaticket:whaticket@localhost:5432/whaticket?schema=public"

# ==================== Redis ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== JWT Security ====================
# IMPORTANT: Change these values in production!
JWT_SECRET=change-this-super-secret-jwt-key-in-production
JWT_REFRESH_SECRET=change-this-super-secret-refresh-key-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==================== CORS ====================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ==================== Rate Limiting ====================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ==================== WhatsApp / Baileys ====================
WHATSAPP_SESSIONS_PATH=./sessions
WHATSAPP_RECONNECT_INTERVAL=5000

# ==================== Sentry (optional) ====================
SENTRY_DSN=

# ==================== Storage ====================
UPLOAD_PATH=./public
MAX_FILE_SIZE=16777216

# ==================== Docker Compose Variables ====================
# These are used by docker-compose.v2.yaml
POSTGRES_DB=whaticket
POSTGRES_USER=whaticket
POSTGRES_PASSWORD=whaticket_secret
POSTGRES_PORT=5432

TZ=America/Sao_Paulo

BACKEND_PORT=3001
FRONTEND_PORT=3000
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081
